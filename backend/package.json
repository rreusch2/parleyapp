{
  "name": "parleyapp-backend",
  "version": "1.0.0",
  "description": "ParleyApp MLB Predictions Backend with Cron Automation",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc --skipLibCheck --noEmitOnError false",
    "build:prod": "tsc --skipLibCheck --noEmitOnError false --transpileOnly || echo 'Build completed with warnings'",
    "build:babel": "babel src --out-dir dist --extensions '.ts,.js' --source-maps",
    "cron": "node railway-cron.js",
    "daily-automation": "./daily-automation.sh",
    "odds-integration": "ts-node src/scripts/setupOddsIntegration.ts",
    "odds": "ts-node src/scripts/setupOddsIntegration.ts",
    "odds:nfl-week": "ts-node src/scripts/setupOddsIntegration.ts --nfl-week",
    "odds:nfl-week:7": "ts-node src/scripts/setupOddsIntegration.ts --nfl-week --nfl-days=7",
    "odds:nfl-week:10": "ts-node src/scripts/setupOddsIntegration.ts --nfl-week --nfl-days=10",
    "odds:v2": "ts-node src/scripts/runOddsV2.ts",
    "odds:v2:games": "ts-node src/scripts/runOddsV2.ts --games-only",
    "odds:v2:props": "ts-node src/scripts/runOddsV2.ts --props-only",
    "odds:v2:cfb-nhl-props": "ts-node src/scripts/runOddsV2.ts --props-only --sports=cfb,nhl",
    "odds:v2:cfb-props": "ts-node src/scripts/runOddsV2.ts --props-only --sports=cfb",
    "odds:v2:nhl-props": "ts-node src/scripts/runOddsV2.ts --props-only --sports=nhl",
    "odds:v2:mlb-props": "ts-node src/scripts/runOddsV2.ts --props-only --sports=mlb",
    "odds:v2:nba-props": "ts-node src/scripts/runOddsV2.ts --props-only --sports=nba",
    "odds:v2:nfl-props": "ts-node src/scripts/runOddsV2.ts --props-only --sports=nfl",
    "props:v2": "ts-node src/scripts/aggregatePlayerPropsV2.ts",
    "orchestrator": "ts-node src/scripts/run-orchestrator.ts",
    "nfl-preseason": "ts-node src/scripts/fetchNFLPreseason.ts",
    "sgo-props": "ts-node src/scripts/setupSportsGameOddsProps.ts"
  },
  "dependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@google/generative-ai": "^0.7.1",
    "@supabase/supabase-js": "^2.50.0",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.12.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "expo-server-sdk": "^3.7.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "openai": "^4.28.0",
    "puppeteer": "^24.22.3",
    "stripe": "^14.25.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
